@model BooksEntity

@{
    ViewData["Title"] = "Add New Book";
}

<form asp-action="AddBook" asp-controller="Book" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Book Title</label>
                <input asp-for="Title" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Author</label>
                <input asp-for="Author" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label>ISBN Number</label>
                <input asp-for="ISBN" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Add Book</button>
                    <a asp-action="Index" asp-controller="Book" class="btn btn-secondary"></a>
                </center>
            </div>
        </div>
    </div>
</form>